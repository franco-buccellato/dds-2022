{{# partial "contenido" }}
		<section class="section-registrar">
			<div class="container__regsitro">
				<div class="registro">
					<h3>Complete los siguientes datos de su mascota:</h3>
					<form action="/registrarMascota" method="POST">
						<ul>
							<li><label class="registro__label">Seleccione tipo de Mascota:</label></li>
							<li>
								<select name="especie" class="registro__input" name="registro-especie" required>
									<option>Seleccione la especie correspondiente</option>
									<option value="PERRO">Perro</option>
									<option value="GATO">Gato</option>
								</select>
							</li>
							<li><label class="registro__label">Ingrese el nombre:</label></li>
							<li><input type="text" class="registro__input" name="registro-nombre" required></li>
							<li><label class="registro__label">Ingrese el apodo:</label></li>
							<li><input type="text" class="registro__input" name="registro-apodo" required></li>
							<li><label class="registro__label">Ingrese la edad:</label></li>
							<li><input type="text" class="registro__input" name="registro-edad" required></li>
							<li><label class="registro__label">Seleccione el sexo:</label></li>
							<li>
								<select name="sexo" class="registro__input" name="registro-sexo" required>
									<option>Seleccione el sexo correspondiente</option>
									<option value="MACHO">Macho</option>
									<option value="HEMBRA">Hembra</option>
								</select>
							</li>
							<li><label class="registro__label">Ingrese una descripción física:</label></li>
							<li><textarea class="registro__textarea" name="registro-descripcion" cols="63" rows="10" required></textarea></li>
							<li><label class="registro__label">Seleccione imagenes:</label></li>
							<li><input type="file" class="registro__file" name="registro-fotos" required></li>
							<li><label class="registro__label">Seleccione las caracteristicas que se asocien a su Mascota:</label></li>
							<li>
								<select multiple name="caracteristicas" class="registro__input__select" name="registro-caracteristicas" >
									<option value="">Caracteristica 1</option>
									<option value="">Caracteristica 2</option>
									<option value="">Caracteristica 3</option>
									<option value="">Caracteristica 4</option>
									<option value="">Caracteristica 5</option>
									<option value="">Caracteristica 6</option>
									<option value="">Caracteristica 7</option>
									<option value="">Caracteristica 8</option>
									<option value="">Caracteristica 9</option>
									<option value="">Caracteristica 10</option>
									<option value="">Caracteristica 11</option>
									<option value="">Caracteristica 12</option>
									<option value="">Caracteristica 13</option>
								</select>
							</li>
							<!--
								SituacionMascota es SituacionMascota.EN_HOGAR_PROPIO ya que esta siendo registrada por su duenio
							-->
							<li><input type="submit" class="boton-submit" value="Registrar Mascota"></li>
						</ul>
					</form>
				</div>
			</div>
		</section>
{{/partial}}
